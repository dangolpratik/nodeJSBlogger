<%- include("components/header") %>  

<div class="container" id="main">
    <div class="row">
        <div class="col-lg-12">
            <!-- Add Post Form -->
            <div class="addPost">
                <h2>Edit Post</h2>
                <form action="/editPost/<%- post[0].id %>" method="post">
                    <div class="form-group">
                        <label for="postTitle">Title:</label>
                        <input type="text" value="<%- post[0].title %>" class="form-control" id="postTitle" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="postContent">Content:</label>
                        <textarea class="form-control" id="postContent" name="content" rows="8" required><%- post[0].content %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/home/<%- post[0].email %>"><button type="button" class="btn btn-success">Back To Dashboard</button></a>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("components/footer") %>  
